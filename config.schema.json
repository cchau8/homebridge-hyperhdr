{
  "pluginAlias": "hyperhdr-plugin",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Example Dynamic Platform"
      },
      "url": {
        "title": "HyperHDR Server URL",
        "type": "string",
        "format": "uri",
        "required": true,
        "description": "The URL of the HyperHDR server."
      },
      "authToken": {
        "title": "Authentication Token",
        "type": "string",
        "description": "The authentication token for the HyperHDR server."
      },
      "deviceName": {
        "title": "Device Name",
        "type": "string",
        "required": true,
        "description": "The name of the HyperHDR device."
      }
    },
    "required": ["name", "url", "deviceName"],
    "additionalProperties": false
  }
}
