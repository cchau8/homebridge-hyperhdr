{
  "pluginAlias": "hyperhdr-plugin",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Example Dynamic Platform"
      },
      "url": {
        "title": "HyperHDR Server IP",
        "type": "string",
        "format": "string",
        "required": true,
        "description": "The URL of the HyperHDR server."
      },
      "port": {
        "title": "HyperHDR Server Port",
        "type": "number",
        "required": true,
        "description": "The port of the HyperHDR server."
      },
      "deviceName": {
        "title": "Device Name",
        "type": "string",
        "required": true,
        "description": "The name of the HyperHDR device."
      }
    },
    "required": ["name", "url", "deviceName"],
    "additionalProperties": false
  }
}
